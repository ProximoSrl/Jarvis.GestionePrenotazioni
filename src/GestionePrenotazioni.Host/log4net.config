<?xml version="1.0" encoding="utf-8"?>
<log4net>
  <root>
    <level value="DEBUG" />
    <appender-ref ref="ColoredConsoleAppender" />
    <!--<appender-ref ref="mongo-appender" />-->
    <appender-ref ref="RollingFile" />
  </root>
  <logger name="Topshelf" additivity="false">
    <level value="DEBUG" />
    <appender-ref ref="ColoredConsoleAppender" />
  </logger>
  <logger name="Rebus" additivity="false">
    <level value="DEBUG" />
    <appender-ref ref="ColoredConsoleAppender" />
  </logger>
  <appender name="RollingFile" type="log4net.Appender.RollingFileAppender">
    <param name="File" value="Logs\errors.log" />
    <appendToFile value="true" />
    <threshold value="ERROR" />
    <rollingStyle value="Composite" />
    <datePattern value="yyyyMMdd" />
    <maxSizeRollBackups value="10" />
    <maximumFileSize value="1MB" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%d %-8ndc %-5thread %-5level %logger %message %n" />
    </layout>
  </appender>
  <appender name="ColoredConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
    <mapping>
      <level value="ERROR" />
      <foreColor value="Red, HighIntensity" />
    </mapping>
    <mapping>
      <level value="DEBUG" />
      <foreColor value="White" />
      <backColor value="Green" />
    </mapping>
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%-5level %logger [%-5thread] - %message%newline" />
    </layout>
  </appender>

  <appender name="mongo-appender" type="Jarvis.Framework.MongoAppender.BufferedMongoDBAppender, Jarvis.Framework.MongoAppender">
    <threshold value="INFO" />
    <SaveOnDifferentThread value="true" />
    <settings>
      <connectionString value="mongodb://admin:demoeventstorming2017@eventstormingmongo.westeurope.cloudapp.azure.com/GestionePrenotazioni-logs?authSource=admin" />
      <collectionName value="logs" />
      <cappedSizeInMb value="false" />
      <programName value="Gestione Prenotazioni" />
      <looseFix value="true" />
      <expireAfter>
        <days value="5" />
      </expireAfter>
    </settings>
  </appender>
</log4net>